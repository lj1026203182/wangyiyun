Page {
  height: 100vh;
  overflow: hidden;
}
.slot-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.swiper {
  width: 100%;
  height: calc(100vh - 0rpx);
}
.swiper-item {
  width: 100%;
  height: 100%;
}
.scroll-view {
  width: 100%;
  height: 100%;
}
.item-wrapper {
  width: 100%;
  padding: 20rpx 32rpx;
}
.item-wrapper_img {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}
.item-wrapper .item-wrapper-content {
  height: 60rpx;
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}
.item-wrapper .item-wrapper-content_img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

